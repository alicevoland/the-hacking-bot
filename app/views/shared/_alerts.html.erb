<div class="container">
  <% flash.each do |key, value|
  type = 'secondary'
  type = 'success' if %i[success].include?(key.to_sym)
  type = 'primary' if %i[notice info].include?(key.to_sym)
  type = 'danger' if %i[alert error].include?(key.to_sym)
  type = 'warning' if %i[warning].include?(key.to_sym)
  %>
  <div class="alert alert-<%= type %>">
    <%= value %>
  </div>
<% end %>
</div>
